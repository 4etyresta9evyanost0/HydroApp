<Page x:Class="HydroApp.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HydroApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu"
      DataContext="{DynamicResource Mvm}">

    <Grid Background="White">
        <Label Content="Пока что здесь ничего нет."></Label>
        <CheckBox x:Name="CB" Content="?" Style="{StaticResource {x:Type ToggleButton}}" Width="50" Height="50" Background="White" BorderThickness="0">
            <CheckBox.Triggers>
                <EventTrigger RoutedEvent="CheckBox.Checked">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation From="White" To="Black"
                                            Storyboard.TargetProperty="(ToggleButton.Background).(SolidColorBrush.Color)"
                                            Duration="0:0:2">
                            </ColorAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </CheckBox.Triggers>
        </CheckBox>
    </Grid>
</Page>
