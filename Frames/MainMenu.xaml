<Page x:Class="HydroApp.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HydroApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu"
      DataContext="{DynamicResource Mvm}">

    <Grid Background="White">
        <Image Width="385" Height="200" Margin="0,-150,0,0" Source="/Resources/LOGO.png"/>
        <Label Width="385" Height="200" 
               Margin="0,150,0,0" FontSize="32" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <TextBlock TextWrapping="Wrap">Чтобы начать работу нажмите на любую из кнопок слева</TextBlock>
        </Label>
    </Grid>
</Page>
